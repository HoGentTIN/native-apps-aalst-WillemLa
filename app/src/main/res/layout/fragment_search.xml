<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mycocktailbackground">

        <TextView
            android:id="@+id/SearchFragment_TextView_SearchTitle"
            android:text="@string/SearchFragment_TextView_SearchTitle"            android:theme="@style/Screen_Title_Style"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height ="wrap_content"
            android:layout_width ="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/background_light"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SearchFragment_TextView_SearchTitle">

            <ImageButton
                android:id="@+id/SearchFragment_Button_StartSearch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:theme="@style/SearchFragment_SearchImage_Button" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/SearchFragment_TextInput_SearchBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/black"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/SearchFragment_TextView_CategoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Screen_Title_Style"
            android:text="@string/SearchFragment_TextView_CategoryTitle"            app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
            app:layout_constraintStart_toStartOf="@+id/linearLayout5"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/SearchFragment_RecycleView_CategoryRecycleView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="clip_horizontal|center"
            android:foregroundGravity="center|center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SearchFragment_TextView_CategoryTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>
        <variable
            name="searchViewModel"
            type="com.example.mycocktails.screens.search.SearchViewModel" />
    </data>

</layout>