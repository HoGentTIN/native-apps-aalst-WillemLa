<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="cocktail"
            type="com.example.mycocktails.Cocktail" />
        <variable
            name="clickListener"
            type="com.example.mycocktails.CocktailListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-35dp"
        android:orientation="vertical"
        android:onClick="@{() -> clickListener.onClick(cocktail)}">


        <androidx.cardview.widget.CardView
            android:id="@+id/listCardId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="16dp"
            android:onClick="@{() -> clickListener.onClick(cocktail)}">
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/CocktailNameBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="sans-serif"
                    android:paddingBottom="100dp"
                    android:text="Button"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="36sp"
                    app:cocktailName="@{cocktail}"
                    android:onClick="@{() -> clickListener.onClick(cocktail)}"

                />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>
