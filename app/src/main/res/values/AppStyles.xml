<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Overall Project Style -->
    <style name="Screen_Title_Style" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">36sp</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Project_Button_BlackText" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/background_dark</item>
    </style>


    <!-- Categorie_layout: Category Layout Button Styles -->
    <style name="CreateCocktailForm_TextInputField" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- List Layout.. -->
    <style name="CocktailList_ListLayout_CocktailNameButton" parent="Widget.AppCompat.Button">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:layout_marginLeft">125dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CocktailList_ListLayout_Image_Button" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="srcCompat">@drawable/arrow_right</item>
        <item name="android:padding">15dp</item>
    </style>

    <!-- SearchFragment..-->
    <style name="SearchFragment_TextInputField" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SearchFragment_SearchImage_Button" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="srcCompat">@drawable/ic_search_black_24dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <!-- Recipe..-->
    <style name="Recipe_SubTitle_TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Recipe_RecipeText_TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">18sp</item>
    </style>



    <!-- Create Cocktail.. -->
    <style name="CreateCocktail_Category_Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:entries">@array/soortenArray</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="CreateCocktail_TextInputLayout" >
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="CreateCocktail_TextInput_Constraints" >
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>




    <style name="CreateCocktail_TextInputEditText_Black" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>

    </style>

</resources>